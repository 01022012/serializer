<div class="field">
  <%= f.label :name, "Name:" %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :email, "Email:" %><br />
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.check_box :fb_share %>
  <%= f.label :fb_share, "FB Share" %>
</div>

<div class="field">
  <%= f.check_box :tw_share %>
  <%= f.label :tw_share, "TW Share" %>
</div>

<div class="field">
  <%= f.radio_button :tb_share, true %>
  <%= f.label :tb_share_true, "Enable Tumblr Share" %>
</div>

<div class="field">
  <%= f.radio_button :tb_share, false %>
  <%= f.label :tb_share_false, "Disable Tumblr Share" %>
</div>